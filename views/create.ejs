<% layout('layouts/boilerplate')%>
<div class="mb-5 pr-10">
    <h2 class="text-center">New Task</h2>
    <div class="col-md-5 offset-md-3 ml-10 ">
        <form action="/tasks" method="post" class="no-validate" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control"  type="text" name="title" id="title">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">enter description</label>
                <textarea class="form-control"  name="description" id="description" cols="20" rows="1"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="dueDate">Select due date</label>
                <input class="form-control"  type="date" name="dueDate" id="dueDate">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">submit</button>
            </div>
        </form>
    </div>
</div>